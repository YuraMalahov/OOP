{
    "compilerOptions": {
      "esModuleInterop": true,
      "experimentalDecorators": true,
      "emitDecoratorMetadata": true,
      "lib": ["ESNext"],
      "module": "commonjs",
      "target": "ESNext",
      "sourceMap": true,
      "moduleResolution": "node",
      "noImplicitReturns": true,
      "noImplicitThis": true,
      "noImplicitAny": true,
      "strictNullChecks": true,
      "types": [
        "node",
        "reflect-metadata",
        "jest"
      ],
      "resolveJsonModule": true,
      "importHelpers": false,
      "declaration": true,
      "strict": true,
      "outDir": "dist",
      "baseUrl": ".",
      "paths": {
        "*": ["./node_modules/*"]
      },
      "typeRoots": ["./node_modules/@types"]
    },
    "include": [
      "src/**/*.ts",
      "index.ts"
    ],
    "exclude": [
      "node_modules",
      "**/*.spec.ts",
      "tests/integration"
    ]
  }
  